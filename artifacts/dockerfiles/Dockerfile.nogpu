FROM ubuntu

RUN apt update
RUN apt-get install -y python3 python3-pip
RUN apt-get install -y nano

COPY requirements.txt /requirements.txt
RUN pip3 install --no-cache-dir --user -r /requirements.txt

WORKDIR /app
COPY . /app/artifacts

# Set the default command to python3
CMD ["python3"]

EXPOSE 6006 8080